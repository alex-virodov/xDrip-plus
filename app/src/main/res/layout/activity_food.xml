<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eveningoutpost.dexdrip.food.FoodPhotoActivity2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/food_list"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/new_photo_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/food_dates_list"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:background="#ff0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/food_list"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#00ff00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food_dates_list"
            app:layout_constraintEnd_toStartOf="@+id/food_list"
            app:layout_constraintBottom_toTopOf="@id/new_photo_button" />

        <Button
            android:id="@+id/new_photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="New Photo"
            android:onClick="clickNewPhoto"/>


</android.support.constraint.ConstraintLayout>
