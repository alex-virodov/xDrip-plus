<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eveningoutpost.dexdrip.food.FoodPhotoActivity2">

        <Button
            android:id="@+id/new_photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="New Photo"
            android:onClick="clickNewPhoto"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/food_list"
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/food_note_edit_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_photo_button" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/food_dates_list"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="#ff0000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/food_list"
            app:layout_constraintTop_toBottomOf="@id/new_photo_button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="#00ff00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food_dates_list"
            app:layout_constraintEnd_toStartOf="@+id/food_list"
            app:layout_constraintBottom_toTopOf="@id/food_note_edit_text" />

        <EditText
            android:id="@+id/food_note_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:linksClickable="false"
            android:lines="4"
            android:minLines="2"
            android:maxLines="5"
            android:hint="(Note - NYI!!!)"
            app:layout_constraintBottom_toTopOf="@id/add_button"
            android:enabled="false"
            />

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Add this again"
            android:onClick="clickAdd"/>


</android.support.constraint.ConstraintLayout>
